    '2020-01-01 00:00:00',       -- Jahr
    'Einführung in SQL',         -- Titel
    'verfügbar',                 -- Status
    'sql_buch_cover.jpg',        -- Bild
    'admin1',                    -- Administrator
    1,                           -- sid (Login-ID)
    'Max Mustermann',            -- Autor
    2,                           -- kid (Kategorie-ID, z. B. Deutsch)
    'Ein praxisnahes Buch zur Einführung in SQL und Datenbanken.' -- Beschreibung
);



CREATE TABLE enthaltene_werke (
    id SERIAL PRIMARY KEY,
    buch_id INTEGER REFERENCES buecher(id),
    titel VARCHAR(255),
    autor VARCHAR(255),
    werkart VARCHAR(100),
    seitenzahl INTEGER,
    bemerkung TEXT
);
