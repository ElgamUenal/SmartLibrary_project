    isbn, anzahl, entlehnung, verlag, jahr, titel, status, bild,
    administrator, sid, autor, kid, beschreibung
) VALUES (
    '978-3-16-148410-0',         -- ISBN
    5,                           -- Anzahl
    '2025-09-26 13:30:00',       -- Entlehnung
