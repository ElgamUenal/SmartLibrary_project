
CREATE TABLE buecher (
    id SERIAL PRIMARY KEY,
    isbn VARCHAR(20),
    anzahl INTEGER,
    entlehnung TIMESTAMP,
    verlag VARCHAR(100),
    jahr TIMESTAMP,
    titel VARCHAR(100),
    status VARCHAR(100),
    bild VARCHAR(100),
    administrator VARCHAR(100),
    sid INTEGER REFERENCES login(sid),
    autor VARCHAR(100),
    kid INTEGER REFERENCES kategorie(kid),
    beschreibung VARCHAR(200)
);
CREATE TABLE login (
    sid SERIAL PRIMARY KEY,
    token VARCHAR(200)
);

CREATE TABLE kategorie (
    kid SERIAL PRIMARY KEY,
    name VARCHAR(40)
);

INSERT INTO login (sid, token) VALUES
(1, 'test-token-123');



